/* pages/order/order.wxss */
page{
  background:#e8e8e8;
}
.page-panel{
  margin:30rpx 5% 30rpx 5%;
  width:90%;
  height:70rpx;
  display:flex;
  flex-direction:row;
  border:1rpx solid e5e4e2;
}
.page-panel .item{
  width:50%;
  height:70rpx;
  line-height:70rpx;
  background:#f2f2f2;
  text-align:center;
  font-size:30rpx;
  color:#828282;
}
.page-panel .item.active{
  color:#f2f2f2;
  background:#828282;
  border-bottom:1rpx solid #91b7e6;
}

.orderlist-title{
  margin-left:5%;
  background:#a1bbee;
  width:90%;
  height:90rpx;
  position:relative;
}
.orderlist-title .line{
  position:absolute;
  top:20rpx;
  width:100%;
  border-bottom:7rpx dotted #FFF;
}
.orderlist-panel{
  margin-left:5%;
  width:90%;
  min-height:850rpx;
  background:#FFF;
}
.orderlist-panel .empty{
  padding-top:60rpx;
  font-size:40rpx;
  text-align:center;
  font-family:'隶书';
}
.orderlist-panel .item{
  width:100%;
  height:120rpx;
  border-bottom:1rpx solid #e8e8e8;
  position:relative;
  display:flex;
  flex-direction:row;
}
.orderlist-panel .item .lefttext{
  display:flex;
  flex-direction:column;
  left:30rpx;
  position:absolute;
}
.orderlist-panel .item .lefttext text{
  font-size:30rpx;
  margin-top:20rpx;
  color:black;
}
.orderlist-panel .item .righttext{
  left:300rpx;
  position:absolute;
  display:flex;
  flex-direction:column;
}
.orderlist-panel .item .righttext text{
  font-size:30rpx;
  margin-top:20rpx;
  width:320rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  color:black;
}
.orderlist-panel .item .moreimg{
  margin-top:30rpx;
  width:30rpx;
  height:60rpx;
  right:10rpx;
  position:absolute;
}

.state-note{
  max-width:200rpx;
  height:120rpx;
  position:absolute;
  left:90rpx;
  top:3rpx;
}


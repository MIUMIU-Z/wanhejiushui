
.title-panel{
  width:100%;
  height:100rpx;

  display:flex;
  flex-direction:row;
  padding:50rpx 0rpx 30rpx 50rpx;
}

.title-panel image{
  width:50rpx;
  height:50rpx;
}

.title-panel .title{
  margin-left:20rpx;
  color:#a9a9a9;
  font-size:35rpx;
  height:50rpx;
  line-height:50rpx;
}

.address-panel{
  width:100%;
}
.address-panel .item{
  width:80%;
  height:140rpx;
  margin:20rpx 0rpx 0rpx 50rpx;
  display:flex;
  flex-direction:row;
}

.address-panel .item image{
  width:60rpx;
  height:50rpx;
  margin-top:45rpx;
}
.address-panel .item .text-panel{
  width:100%;
  height:50rpx;

}
.address-panel .item .text-panel .uptext{
  font-size:40rpx;
  font-weight:bold;
  margin-left:30rpx;
  font-family:'华文行楷';
  height:60rpx;
  line-height:60rpx;
  overflow: hidden;
  text-overflow:ellipsis;
}
.address-panel .item .text-panel .bottomtext{
  font-size:35rpx;
  margin-left:30rpx;
  font-family:'楷体';
  height:60rpx;
  line-height:60rpx;
  padding-bottom:20rpx;
  border-bottom:1rpx solid #e8e6e6;
}

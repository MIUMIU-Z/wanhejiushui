/* pages/praise/praise.wxss */
.top-panel{
  width:100%;
  height:100rpx;
  padding-top:20rpx;
}
.top-panel .btn{
  margin-left:20rpx;
  padding:0rpx 10rpx 0rpx 10rpx;
  font-size:25rpx;
  height:50rpx;
  background:#ffebeb;
  float:left;
  line-height:50rpx;
  color:#666666;

}
.top-panel .btn.active{
  background:#ef3030;
  color:#FFF;
}
.top-panel .degreetext{
  margin-top:10rpx;
  float:right;
  margin-right:30rpx;
  width:100rpx;
  text-align:center;
}
.top-panel .degreetext .title{
  font-size:25rpx;
  line-height:50rpx;
  color:#666666;
}
.top-panel .degreetext .degree{
  font-size:30rpx;
  line-height:50rpx;
  color:#ef3030;
  font-weight:bold;
}


.item{
  width:94%;
  border-bottom:1rpx solid #eaeaea;
  padding:20rpx 20rpx 20rpx 30rpx;
}
.item .toppanel{
  width:100%;
  height:60rpx;
  align-items: center;
  display: flex;
  flex-direction: row;
}
.item .toppanel text{
  line-height:60rpx;
  font-size:25rpx;
}
.item .toppanel .star{
  margin-left:20rpx;
}
.item .toppanel .star image{
  width:35rpx;
  height:35rpx;
}
.item .textpanel{
  min-height:40rpx;
  line-height:30rpx;
  font-size:25rpx;
  text-indent:2em;
}
.item .imgpanel{
  display: flex;
  flex-direction: row;
  flex-wrap:wrap;
}
.item .imgpanel image{
  margin-top:20rpx;
  margin-left:20rpx;
  height:80rpx;
  max-width:200rpx;
  /*border:2rpx dashed #a2a4a6;*/
}
.item .timepanel{
  margin-top:20rpx;
  min-height:30rpx;
  line-height:30rpx;
  font-size:22rpx;
  color:#a2a4a6;
}

.reachbottom{
  width:100%;
  height:60rpx;

  clear: both;
  line-height:60rpx;
  text-align: center;
}
.reachbottom image{
  width:40rpx;
  height:40rpx;
  display: inline-block;
  vertical-align: middle;
}
.reachbottom .text{
  font-size:30rpx;
  display: inline-block;
  margin-left:20rpx;
}

.imgshow{
  width:100%;
  height:100%;
  position:fixed;
  top:0;
  left:0;
  background: rgba(0,0,0,0.5);
  line-height:1000rpx;
  text-align:center;
  display: table-cell;
}
.imgshow image{
  width:90%;
  min-height:300px;

  opacity:1;
  vertical-align:middle;
}

.backtotop{
  width:100rpx;
  position: fixed;
  bottom:20%;
  right:5%;
  display: flex;
  flex-direction:column;
  font-size:25rpx;
  text-align:center;
  color:#494949;
}
.backtotop image{
  margin-left:10rpx;
  width:80rpx;
  height:80rpx;
  margin-bottom:10rpx;
}
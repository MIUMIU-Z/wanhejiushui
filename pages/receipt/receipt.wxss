@import "../../font/font.wxss";
page{
  background:#f5f5f5;
}
.isreceipt-panel{
  border-top:1rpx solid #cccccc;
  background:#FFF;
  width:100%;
  min-height:140rpx;
  padding-top:50rpx;
  margin-bottom:20rpx;
  padding-bottom:30rpx;
}
.title{
  font-size:25rpx;
  color:#999999;
  height:30rpx;
  line-height:30rpx;
  margin-left:20rpx;
}
.checkbox-panel{
  display:flex;
  flex-direction:row;
  flex-wrap:wrap;
}
.checkbox-panel .check-box{
  margin-top:30rpx;
  margin-left:20rpx;
  width:160rpx;
  height:60rpx;
  border:2rpx solid #d2d2d2;
  color:#666666;
  position:relative;
}
.checkbox-panel .check-box.active{
  border:2rpx solid #ef3030;
  color:#ef3030;
}
.checkbox-panel .check-box.dead
{
  border:2rpx solid #eaeaea;
  color:#eaeaea;
}
.checkbox-panel .check-box image{
  position:absolute;
  width:64rpx;
  height:50rpx;
  top:0;
  right:0;
}
.checkbox-panel .check-box .text{
  font-size:25rpx;
  line-height:60rpx;
  text-align:center;
}

.receipttype-panel{
  background:#FFF;
  width:100%;
  min-height:140rpx;
  padding-top:40rpx;
  margin-bottom:20rpx;
  padding-bottom:30rpx;
}

.remark-panel{
  color:#999999;
  font-size:25rpx;

  width:100%-40rpx;
  background:#FFF;
  padding:30rpx 20rpx 10rpx 20rpx;
}

.receipttop-panel{
  background:#FFF;
  width:100%;
  padding-top:40rpx;
  margin-bottom:20rpx;
  padding-bottom:30rpx;
}

.receipttop-panel .toptitle-panel{
  display:flex;
  flex-direction:row;
  margin-top:35rpx;
  padding-left:20rpx;
}

.receipttop-panel .toptitle-panel image{
  width:40rpx;
  height:40rpx;
}
.receipttop-panel .toptitle-panel .toptitle{
  font-size:25rpx;
  color:#999999;
  height:40rpx;
  line-height:40rpx;
  margin-left:15rpx;
}

.receipttop-panel .topcontent-panel{
  width:100%;
  
}
.receipttop-panel .topcontent-panel .contentitem{
  margin-top:30rpx;
  padding-left:75rpx;

  height:50rpx;
  line-height:50rpx;
  display: flex;
  flex-direction:row;
}
.receipttop-panel .topcontent-panel .contentitem .contenttitle{
  height:50rpx;
  line-height:50rpx;
  width:135rpx;
  margin-right:45rpx;
  font-size:25rpx;
  color:#999999;
}
.receipttop-panel .topcontent-panel .contentitem input{
  margin-left:10rpx;
  width:400rpx;
  height:25rpx;
  border:1rpx solid #d2d2d2;
  font-size:25rpx;
  padding:0rpx 20rpx 0rpx 20rpx;
}

.receiptcontent-panel{
  background:#FFF;
  width:100%;

  padding-top:40rpx;
  margin-bottom:120rpx;
  padding-bottom:30rpx;
}





.button-panel{
  position: fixed;
  bottom:0;
  width:100%;
  height:90rpx;
  border-top:1rpx solid #e6e6e6;
  background:#FFF;
}
.button{
  margin-top:5rpx;
  margin-left:2%;
  width:96%;
  height:80rpx;
  background:#ff5757;
  border-radius:10rpx;
  line-height:80rpx;
  text-align:center;
  color:#FFF;
  font-size:30rpx;
}
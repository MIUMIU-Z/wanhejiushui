/* pages/addresslist/addresslist.wxss */
@import "../../font/font.wxss";
page{
  background:#f5f5f5;
}
.addresslist-panel{
  padding:80rpx 0 0 0;
  width:100%;

}
.addresslist-panel .addresslist{
  width:100%;
}
.addresslist-panel .addresslist .item{
  background:#FFF;
  width:100%;
  height:150rpx;
  padding:10rpx 0 10rpx 0cm;
 /* border-top:1rpx solid #999999;
  border-bottom:1rpx solid #999999;*/
  /*border-radius:20rpx;
  box-shadow: 1rpx 1rpx 1rpx rgba(30,33,39,0.4);*/
  margin-bottom:20rpx;
/*  background: rgba(220,224,223,0.2);*/
  position:relative;
  font-size:30rpx;

}
.addresslist-panel .addresslist .item .toptext{
  display: flex;
  flex-direction: row;
  color: rgba(78,77,79,0.8);
  max-width:80%;
}
.addresslist-panel .addresslist .item .toptext .contact{
  margin-left:50rpx;
  font-size:33rpx;
  height:50rpx;
  line-height:50rpx;
}
.addresslist-panel .addresslist .item .toptext .phone{
  margin-left:50rpx;
  height:60rpx;
  line-height:60rpx;
  font-size:33rpx;
}
.addresslist-panel .addresslist .item .address{
  padding-left:50rpx;
  height:40rpx;
  line-height:40rpx;
  color: rgba(78,77,79,0.8);
  max-width:72%;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.addresslist-panel .addresslist .item .addressdetail{
  padding-left:50rpx;
  height:40rpx;
  line-height:40rpx;
  color: rgba(78,77,79,0.8);
  max-width:72%;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}

.addresslist-panel .addresslist .item .tapnote{
  position:absolute;
  right:60rpx;
  width:50rpx;
  height:50rpx;
}

.add{
  margin-top:100rpx;
  width:90%;
  margin-left:5%;
  background:#0092d8;
  height:80rpx;
  line-height:80rpx;
  font-size:30rpx;
  text-align:center;
  color:#FFF;
  border-radius: 12rpx;
}
.addresslist-panel .addresslist .item .defaultnote{
  position:absolute;
  right:0rpx;
  top:-2rpx;
  width:80rpx;
  height:80rpx;
}

.topnote{
  position:fixed;
  top:0;
  width:100%;
  height:50rpx;
  font-size:25rpx;
  color:#000;
  background:#fff480;
  line-height:50rpx;
  display: flex;
  flex-direction:row;
}
.topnote image{
  margin-top:10rpx;
  width:30rpx;
  height:30rpx;
  margin-left:40rpx;
  margin-right:10rpx;
}


.Popup{
  position: fixed;
  top:0;
  left:0;
  right:0;
  bottom:0;
  width:100%;
  height:100%;
  background: rgba(0,0,0,0.4);
}

.Popup .window{
  position: fixed;
  top:30%;
  left:15%;
  width:70%;
  height:300rpx;
  background:#fff;
  box-shadow: 1rpx 1rpx 1rpx rgba(30,33,39,0.4);
  border-radius:20rpx;
}

.Popup .window .title{
  height:200rpx;
  width:100%;
  font-size:30rpx;
  text-align: center;
}
.Popup .window .title image{
  width:40rpx;
  height:40rpx;
  vertical-align: middle;
  margin-right:30rpx;
  display: inline-block;
}
.Popup .window .text{
  color:#d81e06;
  display: inline-block;
  line-height:230rpx;
}


.Popup .window .operate{
  border-top:1rpx solid #eaeaea;
  height:100rpx;
  width:100%;
  font-size:30rpx;
  line-height:100rpx;
  display: flex;
  flex-direction: row;
}
.Popup .window .operate .item{
  width:49%;
  height:100%;
  text-align: center;
}
/* pages/evaluate/evaluate.wxss */
page{
  background:#f8f8f8;
  font-size:30rpx;
}
.grade-panel{
  width:100%;
  background:#fff;
  padding-bottom:20rpx;
  margin-bottom:20rpx;
}
.grade-panel .title{
  width:100%;
  height:80rpx;
  line-height:80rpx;
  display: flex;
  flex-direction: row;
  border-bottom:1rpx dashed #eaeaea;
  font-weight: bold;
}
.grade-panel .title image{
  margin:15rpx 20rpx 0rpx 30rpx;
  width:50rpx;
  height:50rpx;
}
.grade-panel .item{
  width:100%;
  height:90rpx;
  clear: both;
  line-height:90rpx;
}
.grade-panel .item .text{
  margin-left:30rpx;
  display: inline-block;
  margin-right:20rpx;
}

.grade-panel .item image{
  display: inline-block;
  vertical-align: middle;
  width:50rpx;
  height:50rpx;
}


.goodsitem-panel{
  width:100%;
  background:#fff;
  margin-top:20rpx;
  margin-bottom:20rpx;
}
.goodsitem-panel .title-panel{
  width:100%;
  height:80rpx;
  display: flex;
  flex-direction: row;
  line-height:80rpx;
  border-bottom:1rpx solid #eaeaea;
  position: relative;
}
.goodsitem-panel .title-panel .titleimg{
  max-width:80rpx;
  height:60rpx;
  margin:10rpx 20rpx 0rpx 30rpx;

}
.goodsitem-panel .title-panel .star-panel{
  position:absolute;
  right:30rpx;
  margin-left:20rpx;
  height:80rpx;
  line-height:80rpx;
}
.goodsitem-panel .title-panel .star-panel image{
  margin-top:16rpx;
  width:48rpx;
  height:48rpx;
}
.goodsitem-panel .content-panel{
  padding-top:20rpx;
  padding-bottom:20rpx;
}
.goodsitem-panel .content-panel textarea{
  width:92%;
  padding:20rpx 4% 20rpx 4%;
  max-height:140rpx;
  line-height:30rpx;
  font-size:25rpx;
}
.placeholder{
  background:#b5b5b5;
}
.goodsitem-panel .content-panel .imglist-panel{
  display: flex;
  flex-direction: row;
}
.goodsitem-panel .content-panel .imglist-panel .img-panel{
  margin-left:30rpx;
  padding:20rpx;
  width:120rpx;
  height:120rpx;
  border:1rpx dashed #eaeaea;
  line-height:40rpx;
  text-align:center;
  align-items:center;
  color:#bdbdbd;
  font-size:25rpx;
}
.goodsitem-panel .content-panel .imglist-panel .img-panel image{
  width:60rpx;
  height:60rpx;
}

.theimg{
  margin-left:30rpx;
  padding:20rpx;
  height:120rpx;
  text-align:center;
  border:1rpx dashed #eaeaea;
  /*align-items:center;*/
  color:#bdbdbd;
  font-size:25rpx;
  line-height:30rpx;
}
.theimg image{
  max-width:180rpx;
  height:100rpx;
}

.goodsitem-panel .bottom-panel{
  border-top:1rpx dashed #eaeaea;
  width:100%;
  height:80rpx;
  display: flex;
  flex-direction: row;
  line-height:80rpx;
  align-items: center;
  position: relative;
}

.goodsitem-panel .bottom-panel image{
  margin:0 20rpx 0 30rpx;
  width:35rpx;
  height:35rpx;
}
.goodsitem-panel .bottom-panel .remark{
  position:absolute;
  right:20rpx;
  color:#b5b5b5;
  font-size:25rpx;
  margin-right:20rpx;
}

.goodsitem-panel .btn-panel{
  /*border-top:1rpx solid #eaeaea;*/
  width:100%;
  height:70rpx;
}
.goodsitem-panel .btn-panel .btn{
  float:right;
  margin-right:50rpx;
  width:17%;
  height:50rpx;
  /*margin-top:10rpx;*/
  border:1rpx solid #ff5757;
  color:#ff5757;
  line-height:50rpx;
  font-size:25rpx;
  text-align: center;
}


.button-panel{
  position:absolute;
  bottom:0;
  width:100%;
  height:90rpx;
  border-top:1rpx solid #e6e6e6;
  background:#FFF;
}
.button{
  margin-top:5rpx;
  margin-left:2%;
  width:96%;
  height:80rpx;
  background:#ff5757;
  border-radius:10rpx;
  line-height:80rpx;
  text-align:center;
  color:#FFF;
  font-size:30rpx;
}
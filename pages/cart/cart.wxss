/* pages/trolley/trolley.wxss */
@import "../../font/font.wxss";
page{
  background-color:#f9f9f9;
}
.container {
  display: flex;
  height: 100%;
  align-items: center;/*垂直居中*/
  justify-content: center;/*水平居中*/
  color: #939393;
  font-size:30rpx;
}
.container .cart-image {
  width: 140px;
  height: 140px;
}
.container .text{
  color:#666666;
  margin-bottom:30rpx;
  font-family:'楷体';
  font-size:30rpx;
}
.jumpbutton{
  width:160rpx;
  height:70rpx;
  border-radius: 3%;
  border:3rpx solid #ff6702;
  text-align: center; 
  line-height:70rpx;
  color: #ff6702;
  font-size:25rpx;
}



.com-list-panel{
  background-color:#FFF;
  border-top:1rpx solid #eaeaea;
  border-bottom:1rpx solid #eaeaea;
  margin-bottom:20rpx;
}
.com-operate{
  display: flex;
  flex-direction: row;
  margin-top:50rpx;
  margin-bottom:20rpx;
}
.com-operate-select{
  margin-left:50rpx;
  display: flex;
  flex-direction: row;
}
.com-operate-select image{
  width:40rpx;
  height:40rpx;
}
.com-operate-select text{
  margin-left:20rpx;
  font-size:30rpx;
  line-height:45rpx;
  color:slategray;
}
.com-operate-edit{
  margin-left:420rpx;
  font-size:30rpx;
  line-height:45rpx;
  color:slategray;
}



.com-item{
  display: flex;
  flex-direction: row;
}
.com-item-select{
  margin-left:50rpx;
  width:40rpx;
  height:40rpx;
  margin-top:85rpx;
  margin-right:30rpx;
} 



.com-item-detail{
  display: flex;
  flex-direction: row;
  width: 70%;
  height: 200rpx;
  text-align: left;
  border-bottom: 1rpx solid #dadada; 
}
.com-item-detail .img-panel{
  display: table-cell;
  height:200rpx;
  line-height:200rpx;

}
.com-item-detail .img-panel image{
  vertical-align: middle;
  width: 170rpx;
  max-height: 180rpx;

}
.com-item-detail .righttext{
  position:relative;
  display: flex;
  flex-direction: column;
  margin-top: 25rpx;
  margin-left: 35rpx;
  overflow: hidden; 
}
.com-item-detail .righttext .name{
  width:300rpx;
  font-size: 30rpx;
  overflow: hidden;
  word-wrap:break-word; 
  word-break:break-all;
  text-overflow: ellipsis;
  font-family: "";
}
.com-item-detail .righttext .bottomtext{
  position:absolute;
  bottom:40rpx;
  flex-direction: row;
}

.com-item-detail .righttext .bottomtext .price{
  width:300rpx;
  font-size: 30rpx;
  color:red;
}

.com-item-detail .righttext .bottomtext .num{
  font-size: 30rpx;
  margin-left: 150rpx;
  color: #8E8E8E;
  
}


.comadd{
  height:80rpx;
  margin-left:45%;
  margin-right:45%;
  margin-top:20rpx;
}

.comadd image{
  width:60rpx;
  height:60rpx;
}

.com-panel{
  background-color: #FFF;
  
}
.com-count-panel{
  position: fixed;
  bottom:0rpx;
  width:100%;
  height:80rpx;
  background-color: #eeeeee;
  align-items:center;
  display: flex;
  flex-direction: row;
}

.sumcount{
  position: absolute;
  left:120rpx;
  padding-top:10rpx;
  display: flex;
  flex-direction: row;
  font-size:30rpx;
  line-height:70rpx;
}

.settlement{
  position: absolute;
  right:0rpx;
  width:30%;
  height:80rpx;
  background-color:#ff4444;
  text-align:center;

  line-height:80rpx;
  font-size:30rpx;
  color:white;
}
.numbuttom-list{
  display: flex;
  flex-direction: row;
}
.numbutton{
    width: 30rpx;
    height: 30rpx;
    border:1rpx solid #dedede;
    text-align: center;
    background-color:#dedede;
}

.delete-panel{
  width: 80rpx;
  height: 200rpx;
  /*background-color:#dedede;*/
  text-align:center;
  align-items:center;
  line-height:220rpx;
  font-size:30rpx;
  color:#2E2E2E;
}
.delete-panel image{
  width:50rpx;
  height:50rpx;
}


.uparrow{
  position:fixed;
  bottom:100rpx;
  left:350rpx;
  width:70rpx;
  height:45rpx;
}
.downarrow{
  position:fixed;
  bottom:300rpx;
  left:350rpx;
  width:70rpx;
  height:45rpx;
  transform:rotate(180deg);
}

.selectbtn image{
  margin-top:50rpx;
  width:100rpx;
  height:100rpx;
}

/* pages/address/address.wxss */
page{
    background-color: #f4f4f4;
}
.address-panel{
    margin-top:70rpx;
    width:100%;
    background-color:#FFF;
}
.address-item{
    width:100%;
    height:100rpx;
    border-bottom:1rpx solid #f4f4f4;
    padding-left:30rpx;
    display: flex;
    flex-direction: row;
}
.address-item-title{
    text-align:center;
    font-size:35rpx;
    line-height:100rpx;
    font-weight:500;
}
.address-item input{
    position:absolute;
    left:250rpx;
    margin-top:10rpx;
    font-size:30rpx;
    border-radius: 10rpx;
    box-shadow: 1rpx 1rpx 1rpx 1rpx rgba(35, 34, 33, 0.2) inset;
    height:80rpx;
    width:400rpx;
    text-align:center;
}

.save-button{
    background-color:#0092d8;
    margin-left:10%;
    margin-top:50rpx;
    width:80%;
    height:80rpx;
    line-height:80rpx;
    text-align:center;
    border-radius: 10rpx;
}
.save-button text{
    color:#FFF;
    font-size:40rpx;
}
@import "../../font/font.wxss";
page{

}
.container {
  position: relative;
  width: 100%;
  height: 100%;
  background-color: #FFF;
  color: #939393;
}
.search-panel{
  border-top:1rpx solid #eaeaea;
  border-bottom:1rpx solid #eaeaea;
  position:absolute;
  top:0;
  width:100%;
  height:80rpx;
  background:#f8f8f8;
  z-index:999;
}
.search-panel .inset{
  background:#FFF;
  border-radius:50rpx;
  width:90%;
  margin-left:5%;
  height:60rpx;
  margin-top:10rpx;
  line-height:60rpx;
  display:flex;
  flex-direction:row;
}
.search-panel .inset image{
  width:40rpx;
  height:40rpx;
  margin:10rpx 20rpx 0rpx 35%;
}
.search-panel .inset text{
  font-size:30rpx;
  color:#808080;
}



.com_left{
  position: absolute;
  top: 80rpx;
  left: 0;
  display: inline-block;
  width: 22%;
  height: 100%;
  background: #f8f8f8;
  /*border-top:1rpx dashed #ff6700;*/
  border-right:1rpx solid #f8f8f8;
}
.com_left .com_left_items{
  width:100%;
  text-align:center;
  align-items: center;
  height: 100rpx;
  line-height: 100rpx;
  /*background: -webkit-gradient(linear, left bottom, left top, from(#f5f5f5), to(#eb3f2f));*/
  font-size:30rpx;
  color:#5e5e5e;
  position: relative;
}
.com_left .com_left_items.active{
  color:#e3101e;
  background: #fff;
  height:110rpx;
  line-height: 110rpx;
  /*background: -webkit-gradient(linear, left bottom, left top, from(#20c720), to(#1e37d6));*/
}
.leftline{
  position: absolute;
  left:0;
  width:5rpx;
  height:40rpx;
  top:35rpx;
  background:#d7000f;
}

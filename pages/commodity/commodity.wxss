/* pages/commodity/commodity.wxss */
page{
  background: #f5f5f5;
}
.container {
  position: relative;
  width: 100%;
  height: 100%;
  background-color: #FFF;
  color: #939393;
}
.com_left{
  position: fixed;
  top: 0;
  left: 0;
  display: inline-block;
  width: 25%;
  height: 100%;
  font-family: "黑体";
  background: #8470FF;
  color:#fff;
}
.com_left .com_left_items{
  height: 70rpx;
  line-height: 70rpx;
  padding: 6px 0px 6px 10rpx;
  display:flex;
  flex-direction:row;
  border-radius:10rpx;
  background: -webkit-gradient(linear, left bottom, left top, from(#160866), to(#7178ed));
  font-size:33rpx;
}

.leftimage{
  width:40rpx;
  height:40rpx;
  margin:15rpx 0rpx 0rpx 10rpx;
  position:absolute;
  right:5rpx;
}
.com_left .com_left_items.active{
  background: -webkit-gradient(linear, left bottom, left top, from(#20c720), to(#1e37d6));
}
.com_right{
  position: absolute;
  
  right: 0;
  flex: 1;
  width: 75%;
  height: 100%;
  padding: 10px;
  background: #fff;
  box-sizing: border-box;
}
.com_right .com_right_items{
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 250rpx;
  border-bottom: 1rpx solid #dadada;
  overflow: hidden; 
}
.com_right .com_right_items image{
  margin-top:30rpx;
  min-width: 170rpx;
  height: 200rpx;
}
.com_right .com_right_items .righttext{
  position:relative;
  display: flex;
  flex-direction: column;
  margin-left: 50rpx;
  margin-top: 50rpx;
  height:200rpx;
}
.com_right .com_right_items .righttext .name{
  width:300rpx;
  font-size: 13px;
  word-wrap:break-word; 
  word-break:break-all;
  text-overflow: ellipsis;
}
.com_right .com_right_items .righttext .price{
  position:absolute;
  bottom:25rpx;
  width:300rpx;
  font-size: 11px;
  color:red;
}

.subitem-panel{
  border-top:1rpx dashed orange;
  border-bottom:1rpx dashed orange;
}
.com-left-subitem{
  width:100%;
  height:80rpx;
  line-height:80rpx;
  background: -webkit-gradient(linear, left bottom, left top, from(#836FFF),color-stop(1, #20c720),to(#836FFF));
  border-radius:10rpx;
  font-size:30rpx;
  text-align:center;
}

.com-left-subitem.active{
  background: -webkit-gradient(linear, left bottom, left top, from(#00ff33),color-stop(0.5, #00ccff), to(#00ff33));
}
/* pages/commodity/commodity.wxss */
@import "../../font/font.wxss";
page{
  background: #f5f5f5;
}
.container {
  position: relative;
  width: 100%;
  height: 100%;
  background-color: #FFF;
  color: #939393;
}
.search-panel{
  position:absolute;
  top:0;
  width:100%;
  height:80rpx;
  background:#d7000f;
  z-index:999;
}
.search-panel .inset{
  background:#FFF;
  border-radius:50rpx;
  width:90%;
  margin-left:5%;
  height:60rpx;
  margin-top:10rpx;
  line-height:60rpx;
  display:flex;
  flex-direction:row;
}
.search-panel .inset image{
  width:40rpx;
  height:40rpx;
  margin:10rpx 20rpx 0rpx 35%;
}
.search-panel .inset text{
  font-size:30rpx;
  color:#808080;
}



.com_left{
  position: absolute;
  top: 80rpx;
  left: 0;
  display: inline-block;
  width: 24%;
  height: 100%;
  font-family: "黑体";
  /*background: -webkit-gradient(linear, left bottom, left top, from(#f5f5f5), to(#d7000f));*/
  color:#fff;
  /*border-top:1rpx dashed #ff6700;*/
  border-right:1rpx solid #939393;
}
.com_left .com_left_items{
  height: 70rpx;
  line-height: 70rpx;
  padding: 6px 0px 6px 10rpx;
  display:flex;
  flex-direction:row;

  /*background: -webkit-gradient(linear, left bottom, left top, from(#f5f5f5), to(#eb3f2f));*/
  font-size:33rpx;
}

.leftimage{
  width:40rpx;
  height:40rpx;
  margin:15rpx 0rpx 0rpx 10rpx;
  position:absolute;
  right:5rpx;
}
.leftimage.active{
  transform:rotate(180deg);
}
.com_left .com_left_items.active{
  font-size:35rpx;
  font-family: "华文中宋";
  /*background: -webkit-gradient(linear, left bottom, left top, from(#20c720), to(#1e37d6));*/
}

.subitem-panel{
  border-top:1rpx dashed #FFF;
  border-bottom:1rpx dashed #FFF;
  
}
.com-left-subitem{
  width:100%;
  height:80rpx;
  line-height:80rpx;
  /*background: -webkit-gradient(linear, left bottom, left top, from(#836FFF),color-stop(1, #20c720),to(#836FFF));
  border-radius:10rpx;*/
  font-size:30rpx;
  text-align:center;
}

.com-left-subitem.active{
  font-size:37rpx;
  color:#E08031;
  font-family: "楷体";
  background: -webkit-gradient(linear, left bottom, left top, from(#FFD39B),color-stop(0.5, #FFF), to(#FFD39B));
}





.com_right{
  position: absolute;
  top:80rpx;
  right: 0;
  flex: 1;
  width: 75%;
  height: 100%;
  padding: 10px;
  background: #fff;
  box-sizing: border-box;
}
.com_right .com_right_items{
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 250rpx;
  border-bottom: 1rpx solid #dadada;
  overflow: hidden; 
}
.com_right .com_right_items image{
  margin-top:30rpx;
  min-width: 170rpx;
  height: 200rpx;
}
.com_right .com_right_items .righttext{
  position:relative;
  display: flex;
  flex-direction: column;
  margin-left: 50rpx;
  margin-top: 50rpx;
  height:200rpx;
}
.com_right .com_right_items .righttext .name{
  width:300rpx;
  font-size: 13px;
  word-wrap:break-word; 
  word-break:break-all;
  text-overflow: ellipsis;
}
.com_right .com_right_items .righttext .price{
  position:absolute;
  bottom:25rpx;
  width:300rpx;
  font-size: 11px;
  color:red;
}



/* pages/goodslist/goodslist.wxss */
.search-panel{
  width:100%;
  height:80rpx;
  background:#FFF;
  z-index:999;
  display:flex;
  flex-direction: row;
}
.search-panel .inset{
  background:#f8f8f8;
  border-radius:10rpx;
  width:90%;
  margin-left:5%;
  height:60rpx;
  margin-top:10rpx;
  line-height:60rpx;
  display:flex;
  flex-direction:row;
}
.search-panel.active{
 border-bottom:1rpx solid #eaeaea;
}
.search-panel.active .inset{
  width:80%;
}

.search-panel .inset image{
  width:40rpx;
  height:40rpx;
  margin:10rpx 20rpx 0rpx 20rpx;
}
.search-panel .inset input{
  font-size:30rpx;
  color:#808080;
  width:95%;
}

.filter-panel{
  margin-top:20rpx;
  width:100%;
  height:70rpx;
  display: flex;
  flex-direction:row;
  border-top:1rpx solid #eaeaea;
  border-bottom:1rpx solid #eaeaea;
}
.filter-panel .item{
  font-size:30rpx;
  width:25%;
  line-height:70rpx;
  text-align: center;
  clear:both; 
}
.filter-panel .item.active{
  color:#ff0000;
}
.filter-panel .item .text{
  display: inline-block;
}
.filter-panel .item image{
  margin-left:10rpx;
  display: inline-block;
  width:30rpx;
  height:30rpx;
  vertical-align:middle;
}

.edit-panel{
  width:100%;
  height:70rpx;
  border-bottom:1rpx solid #eaeaea;
  display: flex;
  flex-direction: row;
}
.edit-panel .line{
  margin-top:10rpx;
  height:50rpx;
  text-align: center;
  line-height: 50rpx;
}
.edit-panel .input{
  padding:0 20rpx 0 20rpx;
  margin:10rpx 30rpx 0rpx 30rpx;
  width:25%;
  height:50rpx;
  background:#f3f3f3;
  border-radius: 5rpx;
  font-size:25rpx;
}
.edit-panel .btn{
  width:10%;
  height:50rpx;
  margin-top:8rpx;
  border-radius:10rpx;
  background:#f8f8f8;
  border:1rpx solid #c6c6c6;
  font-size:25rpx;
  text-align: center;
  line-height:50rpx;
}

.goodslist-panel{
  
}
.goodslist-panel .item{
  width:100%;
  height:220rpx;
  display: flex;
  flex-direction: row;
}
.goodslist-panel .item .titleimg{
  margin-left:20rpx;
  max-width:200rpx;
  height:180rpx;
  margin-top:20rpx;
}
.goodslist-panel .item .righttext{
  margin-left:30rpx;
  width:62%;
  height:180rpx;
  line-height:35rpx;
  font-size:30rpx;
  margin-top:20rpx;
  position: relative;
  padding-bottom:20rpx;
  border-bottom:1rpx solid #e6e6e6;
}
.goodslist-panel .item .righttext .name{
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2; 
  -webkit-box-orient: vertical;
  line-height:35rpx;
  clear:both;
}
.goodslist-panel .item .righttext .price{
  color:#e83d48;
  margin-top:15rpx;
}
.goodslist-panel .item .righttext .praise{
  color:#a2a4a6;
  position: absolute;
  bottom:20rpx;
}


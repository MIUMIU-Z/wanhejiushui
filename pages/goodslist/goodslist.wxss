/* pages/goodslist/goodslist.wxss */
.search-panel{
  width:100%;
  height:80rpx;
  background:#FFF;
  z-index:999;
}
.search-panel .inset{
  background:#f8f8f8;
  border-radius:10rpx;
  width:90%;
  margin-left:5%;
  height:60rpx;
  margin-top:10rpx;
  line-height:60rpx;
  display:flex;
  flex-direction:row;
}
.search-panel .inset image{
  width:40rpx;
  height:40rpx;
  margin:10rpx 20rpx 0rpx 20rpx;
}
.search-panel .inset text{
  font-size:30rpx;
  color:#808080;
}

.filter-panel{
  margin-top:20rpx;
  width:100%;
  height:80rpx;
  display: flex;
  flex-direction:row;
  border-top:1rpx solid #eaeaea;
  border-bottom:1rpx solid #eaeaea;
}
.filter-panel .item{
  font-size:30rpx;
  width:25%;
  line-height:80rpx;
  text-align: center;
  align-items:center;
}
.filter-panel .item image{
  
  width:30rpx;
  height:30rpx;
}
/* pages/orderdetail/orderdetail.wxss */
@import "../../font/font.wxss";
page{
  background:#e8e8e8;
}
.detail-chief{
  width:100%;
  border-bottom:1rpx solid #ededed;
  padding-top:20rpx;
  padding-bottom:20rpx;
  background: #FFF;
}
.detail-chief .state-note{
  width:100rpx;
  height:100rpx;
  position:absolute;
  bottom:0;
  right:0;
}
.detail-chief .title{
  margin:20rpx 0rpx 40rpx 35rpx;

  font-size:55rpx;
  font-weight:700;
}

.detail-chief .term{
  margin-top:50rpx;

}
.detail-chief .term .term-item{
  width:90%;
  height:100rpx;
  border-bottom:1rpx solid #efefef;
  margin:0% 5% 0% 5%;
  display: flex;
  flex-direction: row;
  line-height:100rpx;
}

.detail-chief .term .term-item text{
  display:block;
  font-size:30rpx;
  color:#616161;
  font-weight:500;
  margin-left:30rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.more-right{
  margin-top:25rpx;
  position:absolute;
  right:6%;
  width:25rpx;
  height:50rpx
}

.detail-remark{
  margin-top:30rpx;
  padding:20rpx 0rpx 20rpx 0rpx;
  min-height:200rpx;
  width:100%;
  background:#FFF;
  border-top:1rpx solid #ededed;
  border-bottom:1rpx solid #ededed;

  display: flex;
  flex-direction: column;
  margin-bottom:120rpx;
  padding-bottom:100rpx;

}
.detail-remark .title{
  margin-left:20rpx;
  margin-bottom:20rpx;
  width:250rpx;
  height:50rpx;
  line-height:50rpx;
  padding-bottom:20rpx;
  border-bottom:1rpx solid #ededed;
  font-weight:bold;
  text-align:center;
}


.detail-remark text{
  margin-left:50rpx;
  
  word-wrap: break-word;
  word-break:break-all;
  font-size:30rpx;
}


.com-item-detail{
  margin-left:5%;
  display: flex;
  flex-direction: row;
  width: 90%;
  height: 250rpx;
  text-align: left;
  border-bottom: 1rpx solid #dadada; 
}
.com-item-detail image{
  margin-left:50rpx;
  margin-top:30rpx;
  width: 180rpx;
  height: 200rpx;
  line-height:200rpx;
}
.com-item-detail .righttext{
  position:relative;
  display: flex;
  flex-direction: column;
  margin-top: 50rpx;
  margin-left: 35rpx;
  overflow: hidden; 
}
.com-item-detail .righttext .name{
  width:300rpx;
  font-size: 13px;
  overflow: hidden;
  word-wrap:break-word; 
  word-break:break-all;
  text-overflow: ellipsis;
}
.com-item-detail .righttext .bottomtext{
  position:absolute;
  bottom:25rpx;
  flex-direction: row;
}

.com-item-detail .righttext .bottomtext .price{
  width:300rpx;
  font-size: 11px;
  color:red;
}

.com-item-detail .righttext .bottomtext .num{
  font-size: 11px;
  margin-left: 150rpx;
  color: #999999;
  
}

.btn{
  position:fixed;
  bottom:0;
  width:100%;
  height:90rpx;
  background:mediumaquamarine;
  color:#fff;
  text-align:center;
  line-height:90rpx;
}
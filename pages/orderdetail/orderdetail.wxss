/* pages/orderdetail/orderdetail.wxss */
@import "../../font/font.wxss";
page{
  background:#f4f4f4;
}

.address-panel{
  width:100%;
  height:130rpx;
  background: #fff;
  padding:20rpx 0rpx;
  font-size:30rpx;
  align-items: center;
}
.address-panel image{
  float:left;
  margin:35rpx 20rpx 35rpx 30rpx;
  width:60rpx;
  height:60rpx;
} 
.address-panel .righttext{
  float:left;
  height:100%;
  width:75%;
  color:#666666;
}
.address-panel .righttext .up{
  width:100%;
  height:50rpx;
  line-height:50rpx
}
.address-panel .righttext .up .left{
  float:left;
}
.address-panel .righttext .up .right{
  float:right;
}
.address-panel .righttext .bottom{
  width:100%;
  line-height:40rpx;
  height:80rpx;
    text-overflow: -o-ellipsis-lastline;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2; 
    -webkit-box-orient: vertical
}

.reamrk{
  border-top:1rpx dashed #dddddd;
  width:100%;
  min-height:70rpx;
  background:#fff;
  padding:10rpx 0rpx;
  display: flex;
  flex-direction: row;
}
.reamrk image{
  margin:5rpx 20rpx 5rpx 30rpx;
  width:60rpx;
  height:60rpx;
}
.reamrk .righttext{
  margin-top:5rpx;
  width:80%;
  font-size:25rpx;
  color:#666666;
  line-height:60rpx;
}

.orderitem-panel{
  margin-top:20rpx;
  width:100%;
  min-height:350rpx;
  background:#FFF;
  font-size:25rpx;
  margin-bottom:20rpx;
}
.orderitem-panel .title-panel{
  width:100%;
  height:70rpx;
  line-height:70rpx;
}
.orderitem-panel .title-panel .lefttext{
  color:#999999;
  float:left;
  margin-left:30rpx;
}
.orderitem-panel .title-panel .righttext{
  color:#ff2424;
  float:right;
  margin-right:20rpx;

}
.orderitem-panel .goodsitem{
  margin-bottom:5rpx;
  height:180rpx;
  background:#fafafa;
}
.orderitem-panel .goodsitem .img-panel{
  margin-top:10rpx;
  width:150rpx;
  height:160rpx;
  margin-left:30rpx;
  float:left;
  line-height:160rpx;
  background:#fff;
}
.orderitem-panel .goodsitem .img-panel .titleimg{
  width:100%;
  max-height:150rpx;
  vertical-align: middle;
}
.orderitem-panel .goodsitem .textpanel{
  float: right;
  margin-right:20rpx;
  width:70%;
  height:160rpx;
  margin:10rpx 20rpx 10rpx 0rpx;
}
.orderitem-panel .goodsitem .textpanel .name{
  margin-top:5rpx;
  float:left;
  width:70%;
  height:100%;
  line-height:30rpx;
    text-overflow: -o-ellipsis-lastline;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2; 
    -webkit-box-orient: vertical;
  position: relative;
}
.orderitem-panel .goodsitem .textpanel .righttext{
  float:right;
  display: flex;
  flex-direction: column;
  width:30%;
  line-height:40rpx;

}
.orderitem-panel .goodsitem .textpanel .righttext .price{
  height:40rpx;
  text-align: right;
  width:100%;
}

.orderitem-panel .operate-panel{
  height:100rpx;
  line-height:100rpx;
}
.orderitem-panel .operate-panel .lefttext{
  float:left;margin-left:50rpx;height:100%;width:100rpx;text-align:center;
}

.orderitem-panel .operate-panel .btn{
  float:right;
  margin-right:30rpx;
  margin-top:20rpx;
  height:60rpx;
  width:120rpx;
  border:1rpx solid #bababa;
  text-align: center;
  line-height:60rpx;
  color:#000;
  border-radius: 50rpx;
}
.orderitem-panel .count-panel{
  padding-top:20rpx;
  padding-bottom:20rpx;
  width:100%;
}
.orderitem-panel .count-panel .item{
  width:100%;
  height:50rpx;
  font-size:25rpx;
  line-height:50rpx;
}
.orderitem-panel .count-panel .item .left{
  float:left;
  margin-left:30rpx;
}
.orderitem-panel .count-panel .item .right{
  float:right;
  margin-right:20rpx;
}

.btn-panel{
  width:100%;
  height:100rpx;
  position: fixed;
  bottom:0;
  background:#fff;
  font-size:25rpx;
}
.btn-panel .btn{
  float:right;
  margin-right:20%;
  margin-top:20rpx;
  height:60rpx;
  width:60%;
  border:1rpx solid #ff2424;
  text-align: center;
  line-height:60rpx;
  color:#ff2424;
  border-radius: 50rpx;
  background:#fff;
}

.order-panel{
  width:100%;
  padding-top:30rpx;
  background: #fff;
  font-size:25rpx;
  margin-bottom:120rpx;
  position: relative;
}
.order-panel .item{
  margin-left:30rpx;
  height:40rpx;
  line-height:40rpx;
  color:#666666;
}
.order-panel .tail{
  margin-top:30rpx;
  width:100%;
  height:40rpx;
  border-top:1rpx solid #dddddd;
  background: #fcfcfc;
}
.header{

  width:100%;
  height:40rpx;
  border-bottom:1rpx solid #dddddd;
  background: #fcfcfc;
}

.noteimg{
  width:200rpx;
  height:200rpx;
  position:absolute;
  bottom:35rpx;
  right:50rpx;
}


.Popup{
  position: fixed;
  top:0;
  left:0;
  right:0;
  bottom:0;
  width:100%;
  height:100%;
  background: rgba(0,0,0,0.4);
}

.Popup .window{
  position: fixed;
  top:30%;
  left:15%;
  width:70%;
  height:300rpx;
  background:#fff;
  box-shadow: 1rpx 1rpx 1rpx rgba(30,33,39,0.4);
  border-radius:20rpx;
}

.Popup .window .title{
  height:200rpx;
  width:100%;
  font-size:30rpx;
  text-align: center;
}
.Popup .window .title image{
  width:40rpx;
  height:40rpx;
  vertical-align: middle;
  margin-right:30rpx;
  display: inline-block;
}
.Popup .window .text{
  color:#d81e06;
  display: inline-block;
  line-height:230rpx;
}


.Popup .window .operate{
  border-top:1rpx solid #eaeaea;
  height:100rpx;
  width:100%;
  font-size:30rpx;
  line-height:100rpx;
  display: flex;
  flex-direction: row;
}
.Popup .window .operate .item{
  width:49%;
  height:100%;
  text-align: center;
}


.contact-title{
  width:100%;
  height:50rpx;
  line-height:50rpx;
  font-size:25rpx;
  color:#9b9b9b;
  background:#fff;
}

.contact-panel{
  width:100%;
  height:90rpx;
  background:#fff;
  margin-bottom:20rpx;
  display: flex;
  flex-direction: row;
}

.contact-panel .item{
  margin-top:8rpx;
  margin-left:2%;
  width:46%;
  height:80%;
  border:1rpx solid #d9d9d9;
  display: block;
  text-align: center;
  line-height:65rpx;
  box-shadow: 1rpx 1rpx 1rpx rgba(217,217,217,0.4);
  position: relative;
}

.contact-panel .item image{
  width:45rpx;
  height:45rpx;
  vertical-align: middle;
  display: inline-block;
}

.contact-panel .item .text{
  margin-left:15rpx;
  font-size:25rpx;
  display: inline-block;
}

.tab-btn{
  position:absolute;
  top:0;
  left:0;
  width:100%;
  height:100%;
}

button[plain]{
  border:none;
}
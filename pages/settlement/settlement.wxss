/* pages/settlement/settlement.wxss */
page{
  background:#f5f5f5;
}
.deliver-panel{
  background:#FFF;
  width:90%;
  margin-top:20rpx;
  margin-left:5%;
  border-radius:20rpx;
  font-size:31rpx
}
.deliver-panel .item{
  width:100%;
  height:120rpx;
  padding:30rpx 0rpx 30rpx 0rpx;
  border-bottom:1rpx solid #eaeaea;
  position:relative;
}
.deliver-panel .item .up-panel{
  width:100%;
  height:55rpx;
  display:flex;
  flex-direction:row;
  margin-left:30rpx;
}
.deliver-panel .item .up-panel image{
  width:50rpx;
  height:50rpx;
  margin-top:16rpx;
  margin-right:20rpx;

}
.deliver-panel .item .up-panel .uptext{
  line-height:80rpx;
  height:80rpx;
  font-size:35rpx;
}

.deliver-panel .item .bottom-panel{
  width:100%;
  height:70rpx;
  color:#a9a9a9;
  display:flex;
  flex-direction:row;
  line-height:80rpx;
  font-size:29rpx;
  margin-left:30rpx;
}

.deliver-panel .item .bottom-panel .name{

  margin-left:70rpx;
  margin-right:20rpx;
}
.deliver-panel .item .bottom-panel .phone{

}


.more-img{
  width:50rpx;
  height:60rpx;
  position:absolute;
  right:30rpx;
  top:60rpx;
}

.order-panel{
  background:#FFF;
  width:90%;
  margin-top:30rpx;
  margin-left:5%;
    margin-bottom:150rpx;
  border-radius:20rpx;
  padding:40rpx 0rpx 40rpx 0rpx;
}
.order-panel .title-panel{
  width:100%;
  height:100rpx;
  border-bottom:1rpx solid #eaeaea;
  display:flex;
  flex-direction:row;

}
.order-panel .title-panel .title{
  height:80rpx;
  line-height:80rpx;
  font-family: "黑体";
  font-weight:bold;
  font-size:45rpx;
}
.order-panel .title-panel image{
  margin-left:30rpx;
  width:55rpx;
  height:55rpx;
  margin-top:15rpx;
  margin-right:20rpx;
}
.order-panel .goods-panel{
  width:90%;
  margin-left:5%;
  margin-top:20rpx;
  padding:30rpx 0rpx 50rpx 0rpx;
}

.order-panel .goods-panel .item{
  width: 100%;
  height: 160rpx;
  margin-top:20rpx;
  position:relative;
}
.order-panel .goods-panel .item .goodsimage{
  margin-top:40rpx;
  height: 70rpx;
  max-width:100rpx;
  position:absolute;
  left:10rpx;
}

.order-panel .goods-panel .item .name{
  font-size:30rpx;
  position:absolute;
  height: 160rpx;
  line-height:150rpx;
  left:150rpx;
  width:200rpx;
    text-overflow: -o-ellipsis-lastline;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    

}
.order-panel .goods-panel .item .num{
  position:absolute;
  left:550rpx;
  font-size:30rpx;
  height:160rpx;
  line-height:160rpx;
}
.order-panel .goods-panel .item .price{
  position:absolute;
  left:400rpx;
  color:red;
  font-size:30rpx;
  height:160rpx;
  line-height:160rpx;
}

.order-panel .count-panel{
  height:50rpx;
  width:100%;
  position:relative;
  padding-top:50rpx;
  border-top:1rpx solid #dadada;

}

.order-panel .count-panel .lefttext{
  position:absolute;
  left:30rpx;
  line-height:50rpx;
  height:50rpx;
  font-size:30rpx;
  font-family: "微软雅黑";
}

.order-panel .count-panel .righttext{
  position:absolute;
  right:30rpx;
  line-height:50rpx;
  height:50rpx;
  font-weight:bold;
  font-size:35rpx;
  font-family: "微软雅黑";
}
.btn{
  position:fixed;
  bottom:0;
  width:100%;
  height:100rpx;
  line-height:100rpx;
  background:tomato;
  color:#FFF;
  text-align:center;
}
/**index.wxss**/
page{
  background-color: #f9f9f9;
}

.topitem{
  background-color: #179bda;
  border-bottom:1rpx solid #e6e6e6;
  margin-bottom:15rpx;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top:100rpx; 
  padding-bottom:70rpx;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 30rpx;
  border-radius: 50%;
  border:1rpx solid #e6e6e6;
  
}

.userinfo-nickname {
  color: ghostwhite;
  margin-left:10rpx;
}


.weui_cell{
    position: relative;
    display: flex;
    padding: 15px;
    -webkit-box-align: center;
    -ms-flex-align: center;
    align-items: center;
    border-top: 1px solid #dadada;
    border-bottom: 1px solid #dadada;
    background-color: #fff;
}
.weui_cell_hd{
  display: inline-block;
  width: 20px;
  margin-right: 10px;
}
.weui_cell_hd image{
  width: 100%;
  height: 20px;
  vertical-align: -2px;
}
.weui_cell_bd{
  display: inline-block;
}
.weui_cell_bd_p{
  font-size: 14px;
  color: #939393;
}
.badge{
  position: absolute;
  top: 18px;
  right: 40px;
  width: 20px;
  height: 20px;
  line-height: 20px;
  background: #ff0000;
  color: #fff;
  border-radius: 50%;
  text-align: center;
  font-size: 15px;
}

.order_cell{
    position: relative;
    display: flex;
    padding: 15px;
    -webkit-box-align: center;
    -ms-flex-align: center;
    align-items: center;
    margin-top:25rpx;
    border-top: 1px solid #dadada;
    background-color: #fff;
}
.contact-area{
  width:200rpx;
  margin:20rpx auto;
  margin-top:200rpx;

}
.contact-btn{
  background: transparent;
  font-size: 25rpx;
}
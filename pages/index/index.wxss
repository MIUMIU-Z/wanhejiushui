.userinfo-nickname {
  color: ghostwhite;
  font-size:35rpx;
}

.option-panel{
  width:100%;
/*
  border-top:1rpx solid #dadada;
  border-bottom:1rpx solid #dadada;*/
}

.option-panel .item{
  background:#FFF;
  width:100%-20rpx;
  height:80rpx;
  padding-left:20rpx;

}
.option-panel .item .content{
  display:flex;
  flex-direction:row;
  position:relative;
  width:100%;
  height:100%;
}
.option-panel .item .content .titleimg{
  width:50rpx;
  height:50rpx;
  margin:15rpx;
}
.option-panel .item .content .titletext{
  font-size:30rpx;
  height:80rpx;
  line-height:80rpx;
}

.option-panel .item .content .righttext{
  position:absolute;
  right:65rpx;
  font-size:25rpx;
  height:80rpx;
  line-height:80rpx;
  color:#999999;
}
.option-panel .item .content .moreimg{
  width:25rpx;
  height:40rpx;
  position:absolute;
  right:20rpx;
  top:20rpx;
}

.expand-panel{
  width:100%;
  height:200rpx;
  background:#FFF;
  /*border-bottom:1rpx solid #dadada;*/

}
.expand-panel .content{
  width:100%-20rpx;
  margin-left:20rpx;
  border-top:1rpx solid #eaeaea;
  height:95%;
  display:flex;
  flex-direction:row;
}
.expand-panel .content .item{
  width:30%;
  height:100%;
  text-align:center;
  align-items:center;
  display:flex;
  flex-direction:column;
}

.expand-panel .content .item image{
  margin-top:40rpx;
  width:60rpx;
  height:60rpx;
}
.expand-panel .content .item .title{
  margin-top:20rpx;
  font-size:25rpx;
}


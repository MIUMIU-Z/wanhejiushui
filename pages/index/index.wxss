@import "../../font/font.wxss";
page{
  background-color: #f8f8f8;
}

.topitem{
  background: #f5595a;
  border-bottom:1rpx solid #e6e6e6;
  margin-bottom:15rpx;

  width:100%;
  height:200rpx;
}

.userinfo {
  display: flex;
  flex-direction: row;
  /*align-items: center;*/
  padding-top:20rpx; 
  padding-bottom:20rpx;
}

.userinfo-avatar {
  width: 100rpx;
  height: 100rpx;
  margin: 30rpx;
  border-radius: 50%;
  border:1rpx solid #e6e6e6;
  
}
.text-panel{
  height:100rpx;
  width:500rpx;
  line-height:100rpx;
  margin: 30rpx;
  margin-left:10rpx;
  display: flex;
  flex-direction: row;
}

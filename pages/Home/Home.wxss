/* pages/Home/Home.wxss */
@import "../../font/font.wxss";
page{
    background-color: #f8f8f8;
}
.title-panel{
  width:100%;
  height:25%;
  text-align:center;
  background:#d7000f;
}
.title-panel .titleimg{
  width:360rpx;
  height:180rpx;
}

.search-panel{
  width:100%;
  height:100rpx;
  background:#d7000f;
}

.search-panel .inset{
  background:#FFF;
  border-radius:50rpx;
  width:90%;
  margin-left:5%;
  height:80rpx;
  margin-top:10rpx;
  line-height:80rpx;
  display:flex;
  flex-direction:row;
}
.search-panel .inset image{
  width:40rpx;
  height:40rpx;
  margin:20rpx 20rpx 0rpx 40rpx;
}
.search-panel .inset text{
  font-size:30rpx;
  color:#808080;
}
.tab-panel{
  width:100%;
  height:180rpx;
  display: flex;
  flex-direction:row;
  background: #FFF;
}
.tab-panel .item{
  width:25%;
  height:100%;
  text-align:center;
  font-size:30rpx;
  color:#333333;
  padding-top:25rpx;
  align-items: center;
  position: relative;
}
.tab-panel .item image{
  width:80rpx;
  height:80rpx;
  margin-bottom:10rpx;
}
button[plain]{
  border:none;
}
.tab-btn{
  position:absolute;
  top:0;
  width:100%;
  height:80%;
  /*display: none;*/
  /*visibility:hidden;*/
  z-index:999;
  border:none;
}

.contact-btn{
  margin:5rpx 0rpx 20rpx 60rpx;
  width:75rpx;
  height:75rpx;
  border-radius:50%;
  background:#ffbd76;
  align-items: center;
  vertical-align:middle;
}




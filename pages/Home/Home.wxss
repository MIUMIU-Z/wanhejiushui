.swiper{
  width:100%;
  height:350rpx;
}
.swiper-item{
  width:100%;
  height:100%;  
}
.swiper-image{
  width:100%;
  height:100%;
}

.function-module{
  width:100%;
  height:160rpx;

  display:flex;
  flex-direction:row;
  
}
.function-module .item{
  width:42.5%;
  height:120rpx;
  margin-left:5%;
  margin-top:20rpx;
  background:hotpink;
  border-radius:20rpx;

  text-align: center;
  line-height:120rpx;
  color:#fff;
  font-size:35rpx;
  font-weight:bold;
  text-shadow:1rpx 1rpx 1rpx rgba(33, 33, 33, 0.6);
}




.Recommend{
    display: flex;
    flex-direction: row;
    flex-wrap:wrap;
    background-color: #fff;
    margin-top:30rpx;
    padding-bottom:30rpx;
}
.Recommend .title{
  width:100%;
  height:100rpx;
  background:#fff;
  text-align: center;
  line-height:100rpx;
  clear: both;
  border-bottom:1rpx solid #f0f0f0;
}
.Recommend .title image{
  width:50rpx;
  height:50rpx;
  display: inline-block;
  vertical-align: middle;
  margin-right:20rpx;
}
.Recommend .title .text{
  font-size:30rpx;
  color:#ff8737;
  display: inline-block;
}


.Recblock{
    width: 45%;

    margin: 30rpx 2.5% 0rpx 2.5%;
    align-items: center;
    display: flex;
    flex-direction: column;
    line-height:30rpx;
}
.Recblockimage{
    width: 100%;
    height: 330rpx;
}

.Recblocktext{
    margin-top: 10rpx;
    font-family: "黑体";
    font-size: 30rpx; 
    text-overflow: -o-ellipsis-lastline;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 3; 
    -webkit-box-orient: vertical;
}
.Recblockprice{
    font-family: "黑体";
    margin-top: 5rpx;
    font-size: 25rpx;
    color: red;
}


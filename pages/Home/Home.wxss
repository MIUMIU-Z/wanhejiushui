.swiper{
  width:100%;
  height:350rpx;
}
.swiper-item{
  width:100%;
  height:100%;  
}
.swiper-image{
  width:100%;
  height:100%;
}

.function-module{
  width:100%;
  height:160rpx;

  display:flex;
  flex-direction:row;
  
}
.function-module .item{
  width:42.5%;
  height:120rpx;
  margin-left:5%;
  margin-top:20rpx;
  background:hotpink;
  border-radius:20rpx;

  text-align: center;
  line-height:120rpx;
  color:#fff;
  font-size:35rpx;
  font-weight:bold;
  text-shadow:1rpx 1rpx 1rpx rgba(33, 33, 33, 0.6);
}

view.text {
    border-top: 1px solid #2B144F;
    width:100%;
    height:70rpx;
    background: -webkit-linear-gradient(#9139E3, #2B144F);
}

.textimg{
    width:100%;
    height:70rpx;
}

.Recommend{
    
    display: flex;
    flex-direction: row;
    flex-wrap:wrap;
    background-color: #f8f8f8;
}

.Recblock{
    width: 45%;

    margin: 30rpx 2.5% 30rpx 2.5%;
    align-items: center;
    display: flex;
    flex-direction: column;
}
.Recblockimage{
    width: 100%;
    height: 350rpx;
}

.Recblocktext{
    margin-top: 20rpx;
    font-family: "黑体";
    font-size: 30rpx; 
    text-overflow: -o-ellipsis-lastline;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 3; 
    -webkit-box-orient: vertical
}
.Recblockprice{
    font-family: "黑体";
    margin-top: 10rpx;
    font-size: 25rpx;
    color: red;
}


/* pages/detail/detail.wxss */
page{
    background-color:  #f9f9f9;
    font-size: 14px;
}
.swiper_box {
    width: 100%;
    height: 320px;
}
.swiper_box .slide-image{
    width: 100%;
    height: 100%;
    display: inline-block;
    overflow: hidden;
}


.shopping_container{
    padding: 0 30rpx;
    border-top: 1rpx solid #dedede;
    border-bottom: 1rpx solid #dedede;
    background-color:#fff;
    margin-top:1rpx;
}
.shopping_container .title{
    margin: 20rpx 0;
    font-weight: bold;
    color: #333;
    border-bottom: 1rpx solid #dedede;

    display: flex;
    flex-direction: column;
}

.shopping_container .reason{
    margin: 20rpx 0;
    color: #939393;
    line-height: 22px;
}

.operate{
  display: flex;
  flex-direction: row;
  margin-bottom:15rpx;
  
}

.numoperate{
  width: 300rpx;
  height: 50rpx;
  margin-left:150rpx;
  margin-top:35rpx;
  display: flex;
  flex-direction: row;

}
.numtext{
    width: 150rpx;
    height: 50rpx;
    text-align: center;
    border:1rpx solid white;
}
.numbutton{
    width: 50rpx;
    height: 50rpx;
    border:1rpx solid #dedede;
    text-align: center;
    background:#dedede;
}
.addtocart{
    width:  200rpx;
    height: 100rpx;
    background-color:orangered;
    text-align: center;
    margin-left:50rpx;
    line-height:100rpx;
    font-weight: bold;
    color:#f9f9f9;
    border-radius: 4px;
}


.detail{
    border-top: 1rpx solid #dedede;
    border-bottom: 1rpx solid #dedede;
    background-color:#fff;
    margin-top:20rpx;
}
.detail .detailtext{
    padding: 0 30rpx;
}

.detail .detailtext .title{
    margin: 20rpx 0;
}
.detail .detailtext .content{
    margin: 30rpx 0;
    font-size:30rpx;
}
.detail .image{
    margin: 40rpx 0;
    width: 100%;
    display: inline-block;
    overflow: hidden;
}